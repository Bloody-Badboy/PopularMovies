<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    >

  <android.support.v7.widget.RecyclerView
      android:id="@+id/rv_reviews"
      android:name="me.bloodybadboy.popularmovies.ui.details.view.ReviewItemFragment"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context=".ui.details.view.ReviewsFragment"
      tools:listitem="@layout/listing_item_review_row_layout"
      />
  <TextView
      android:id="@+id/tv_no_reviews"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="Sorry, No reviews found!"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      android:visibility="invisible"
      />
</FrameLayout>